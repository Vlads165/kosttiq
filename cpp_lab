#include <iostream>
using namespace std;
int chet(int k){
  if (k % 2 == 0)
    return k;
  else return 0;
}
int fibo(int p) {
    int fib1 = 0;
    int fib2 = 1;
    int fib_sum;
    while (fib2 <= p) {
    fib_sum = fib1 + fib2;
    fib1 = fib2;
    fib2 = fib_sum;
    if (p == fib_sum)
     return p; 
    }
    return 0;
}
int main() {
  string s;
  int m,max = 0;
  int min = 0;
  int i = 0;
  int j = 0;
  int k = 1;
  int sum_f = 0;
  do {
    cin >> s;
    m = stoi(s);
    if (j == 0) {
      min = m;
      j = 1;
    }
    else {
      if (m == min)
        k = k + 1;
      else {
        if (m < min){
          min = m;
          k = 1;
        }
      }
    }
    if ( chet(m) != 0 and i != 1 ) {
      max = chet(m);
      i = 1;
    }
    else {
      if (chet(m) != 0)
        if (chet(m) > max)
          max = chet(m);
      }
    sum_f = sum_f + fibo(m);
  } while ( s != "0");
    cout << "Максимум среди четных - " << max << endl;
    cout << "Кол-во наименьших чисел - " << k << endl;
    cout << "Сумма чисел Фибоначчи - " << sum_f << endl;
    return 0;
  }
